{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@components/* ": ["components/*"],
      "@assets/*": ["assets/*"],
      "@data/*": ["data/*"],
      "@function/*": ["function/*"],
      "@uicourse/*": ["uicourse/*"],
      "@tailwindcourse/*": ["tailwindcourse/*"],
      "@cssframewcourse/*": ["cssframewcourse/*"],
      "@apicourse/*": ["apicourse/*"],
      "@assignmentpokemon/*": ["assignmentpokemon/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@workshoppokemon/*": ["workshoppokemon/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
